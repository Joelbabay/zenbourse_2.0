# Configuration pour zenbourse.fr
# Copier ce fichier vers .env.local et adapter les valeurs

# Base de données
DATABASE_URL="mysql://[utilisateur]:[mot_de_passe]@localhost:3306/[nom_base_zenbourse_fr]?serverVersion=8.0.32&charset=utf8mb4"

# URL de l'application
APP_URL="https://zenbourse.fr"

# Configuration mail (si nécessaire)
MAILER_DSN=smtp://localhost

# Clé secrète (générer une nouvelle avec: php bin/console secrets:generate-keys)
APP_SECRET="[nouvelle_cle_secrete]"

# Configuration pour les uploads
UPLOAD_DIR="%kernel.project_dir%/public/uploads" 
<div class="position-sticky" style="top: 12.5rem;">
    <div class="sidebar p-4 mb-3 bg-light rounded">
        <h4 class="fst-italic text-center">{{ valueTitle }}</h4>
        {% for slug, data in stocks %}
            {% set active = (currentValue is defined and slug == currentValue) ? 'bg-green' : '' %}
            <div class="d-flex py-2 px-2 w-100 align-items-center {{ active }}">
                <div class="mr-2">
                    <span class="fi fi-{{ data.flag }}" style="font-size: 30px"></span>
                </div>
                <div class="px-3">
                    <a href="{{ path('investisseur_bibliotheque_detail', {'category': category, 'slug': slug}) }}" class="text-dark">
                        {{ data.title }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div> 
{% extends 'base.html.twig' %}

{% block title %}{{ example.title }} - {{ valueTitle }}{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <h1>{{ example.title }}</h1>
                <p class="lead">
                    <span class="fi fi-{{ example.flag }}"></span>
                    <strong>{{ example.ticker }}</strong>
                </p>
                
                {% if example.description %}
                    <div class="mb-4">
                        <h3>Description</h3>
                        <p>{{ example.description }}</p>
                    </div>
                {% endif %}
                
                <div class="row">
                    {% if example.image_jour %}
                        <div class="col-md-6">
                            <h4>Graphique journalier</h4>
                            <img src="{{ example.image_jour }}" class="img-fluid" alt="{{ example.title }} - Journalier">
                        </div>
                    {% endif %}
                    
                    {% if example.image_semaine %}
                        <div class="col-md-6">
                            <h4>Graphique hebdomadaire</h4>
                            <img src="{{ example.image_semaine }}" class="img-fluid" alt="{{ example.title }} - Hebdomadaire">
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <div class="col-md-3">
                {% include 'investisseur/widgets/sidebar-bibliotheque.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %} 
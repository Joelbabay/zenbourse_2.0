{# templates/components/admin_floating_menu.html.twig #}
{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_EDITOR') %}
    <div class="admin-floating-menu">
        <button class="admin-menu-toggle" id="adminMenuToggle">
            <i class="fas fa-cog"></i>
        </button>
        
        <div class="admin-menu-items" id="adminMenuItems">
            <a href="{{ path('admin') }}" class="admin-menu-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            
            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN') %}
                <a href="{{ ea_url()
                    .setController('App\\Controller\\Admin\\UserCrudController')
                    .setAction('index') }}"
                class="admin-menu-item">
                    <i class="fas fa-users"></i>
                    <span>Utilisateurs</span>
                </a>
            {% endif %}

            <a href="{{ ea_url()
                    .setController('App\\Controller\\Admin\\PageContentCrudController')
                    .setAction('index')
                    .set('section', 'HOME') }}"
                class="admin-menu-item">
                    <i class="fas fa-file-alt"></i>
                    <span>Contenus</span>
            </a>
        </div>
    </div>

    <style>
        .admin-floating-menu {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 9999;
        }

        .admin-menu-toggle {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 50%;
            color: white;
            font-size: 24px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .admin-menu-toggle:hover {
            transform: scale(1.1) rotate(90deg);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        }

        .admin-menu-items {
            position: absolute;
            bottom: 75px;
            right: 0;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 10px;
            display: none;
            flex-direction: column;
            gap: 5px;
            min-width: 200px;
            animation: slideUp 0.3s ease;
        }

        .admin-menu-items.active {
            display: flex;
        }

        .admin-menu-item {
            padding: 12px 15px;
            border-radius: 8px;
            color: #333;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .admin-menu-item:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
        }

        .admin-menu-item i {
            width: 20px;
            text-align: center;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .admin-menu-toggle {
                width: 50px;
                height: 50px;
                font-size: 20px;
            }

            .admin-menu-items {
                min-width: 180px;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggle = document.getElementById('adminMenuToggle');
            const menu = document.getElementById('adminMenuItems');
            
            toggle.addEventListener('click', function() {
                menu.classList.toggle('active');
            });

            // Fermer le menu si on clique ailleurs
            document.addEventListener('click', function(event) {
                if (!toggle.contains(event.target) && !menu.contains(event.target)) {
                    menu.classList.remove('active');
                }
            });
        });
    </script>
{% endif %}
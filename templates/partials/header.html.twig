<div class="sticky-top">
	<div class="{% if app.request.get('_route') starts with 'home'%}bg-zen-primary{% elseif app.request.get('_route') starts with 'investisseur'%}bg-zen-investisseur{% elseif app.request.get('_route') starts with 'intraday'%}bg-zen-intraday{% endif %}">
		<div class="container-fluid blog-header-top px-4">
			<header class="blog-header py-3 ">
				<div class="row flex-nowrap justify-content-between align-items-center">
					<div class="col-3">
						<a class="blog-header-logo navbar-brand" href="/">
							<img src="{{ asset('images/logo/zenbourse-logo.svg') }}" alt="Logo" width="25" class="d-inline-block align-text-center">
							<span class="text-uppercase ps-2 text-white">zenbourse 50</span>
						</a>
					</div>
					<div class="col-4 pt-1">
						<h5 class="fst-italic text-light" style="font-size: 25px">Les méthodes qui simplifient la vie</h5>
					</div>

					<div class="col-5 d-flex align-items-center  justify-content-end methode-section">
						{% if app.request.get('_route') starts with 'home'%}
						 	{% if app.user %}
								{% if app.user.isInvestisseur %}
									<div class="mr-3">
										<a class="btn-investisseur p-2 rounded-1" href="{{ path('investisseur_presentation') }}">METHODE INVESTISSEUR</a>
									</div>
								{% endif %}
								{% if app.user.isIntraday %}
									<div class="p-3">
										<a class="btn-intraday p-2 rounded-1" href="{{ path('intraday') }}">METHODE INTRADAY</a>
									</div>
								{% endif %}
							{% endif %}
						{% endif %}
						{% if app.request.get('_route') starts with 'investisseur'%}
							{% if app.user.isIntraday %}
									<div class="p-3">
										<a class="link-light" href="{{ path('intraday') }}">METHODE INTRADAY</a>
									</div>
							{% endif %}
						{% endif %}
						{% if app.request.get('_route') starts with 'intraday'%}
							<div class="p-3">
								<a class="link-light" href="{{ path('investisseur_presentation') }}">METHODE INVESTISSEUR</a>
							</div>
						{% endif %}
						{% if app.user %}
							<a class="btn btn-sm text-uppercase
								{% if app.request.get('_route') starts with 'home'%}
									btn-outline-secondary 
								{% elseif app.request.get('_route') starts with 'investisseur' or 'intraday' %}
									btn-outline-light
								{% endif %}
							mx-2" 
							href="{{ path('app_logout') }}">Deconnexion</a>
						{% else %}
							<a class=" btn btn-sm text-uppercase
							{% if app.request.get('_route') starts with 'home'%}
								btn-outline-secondary 
								{% elseif app.request.get('_route') starts with 'investisseur' or 'intraday' %}
								btn-outline-light
							{% endif %}
							mx-2" href="{{ path('home_login') }}">Connexion</a>
						{% endif %}

						<div class="dropdown">
							<button class="btn btn-sm btn-light dropdown-toggle" type="button" id="dropdownLang" data-bs-toggle="dropdown" aria-expanded="false">
								<span class="fi fi-fr"></span>
							</button>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownLang">
								<li>
									<a class="dropdown-item" href="#">
										<span class="fi fi-fr"></span>
										Français (France)
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										<span class="fi fi-gb"></span>
										English (UK)
									</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</header>
		</div>
	</div>
	{% if app.request.get('_route') starts with 'home'%}
		{% include 'partials/menu_home.html.twig' %}
	{% endif %}
	{% if app.request.get('_route') starts with 'investisseur'%}
		{% include 'partials/menu_investisseur.html.twig' %}
	{% endif %}
	{% if app.request.get('_route') starts with 'intraday'%}		
		{% include 'partials/menu_intraday.html.twig' %}
	{% endif %}
</div>

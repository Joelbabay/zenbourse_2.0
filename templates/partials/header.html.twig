<div class="sticky-top">
	<div class="bg-zen-primary">
		<div class="blog-header-top px-4 custom-container">
			<header class="blog-header py-3 ">
				<div class="row flex-nowrap justify-content-between align-items-center">
					<div class="col-3 ps-0">
						<a class="header-logo d-flex align-items-center navbar-brand" href="/">
							<img src="{{ asset('images/logo/zenbourse-logo.svg') }}" alt="Logo" width="25" class="d-inline-block align-text-center">
							<span class="text-uppercase ps-2 text-white">zenbourse 50</span>
						</a>
					</div>
					<div class="col-4 pt-1">
						<h5 class="fst-italic text-light text-nowrap" style="font-size: 25px">Les méthodes qui simplifient la vie</h5>
					</div>

					<div class="col-5 pe-0 d-flex align-items-center  justify-content-end methode-section">
						{% if app.request.get('_route') starts with 'app'%}
						 	{% if app.user %}
								{% if app.user.isInvestisseur %}
									<div class="mr-3">
										<button class="btn btn-sm">
											<a class="btn-investisseur px-3 py-2 rounded-1 text-nowrap" href="{{ path('investisseur_methode') }}">METHODE INVESTISSEUR</a>
										</button>
									</div>
								{% endif %}
								{% if app.user.isIntraday %}
										<button class="btn btn-sm">
											<a class="btn-intraday px-3 py-2 rounded-1 text-nowrap" href="{{ path('intraday_methode') }}">METHODE INTRADAY</a>
										</button>
								{% endif %}
							{% endif %}
						{% endif %}
						{% if app.request.get('_route') starts with 'investisseur'%}
							{% if app.user.isIntraday %}
									<button class="btn btn-sm">
										<a class="btn-intraday px-3 py-2 rounded-1" href="{{ path('intraday_methode') }}">METHODE INTRADAY</a>
									</button>
							{% endif %}
						{% endif %}
						{% if app.request.get('_route') starts with 'intraday'%}
							<button class="btn btn-sm">
								<a class="btn-investisseur px-3 py-2 rounded-1" href="{{ path('investisseur_methode') }}">METHODE INVESTISSEUR</a>
							</button>
						{% endif %}
						{% if app.user %}
							<a class="btn btn-sm text-uppercase border-2
								{% if app.request.get('_route') starts with 'home'%}
									btn-outline-secondary 
								{% elseif app.request.get('_route') starts with 'investisseur' or 'intraday' %}
									btn-outline-light
								{% endif %}
							mx-2" 
							href="{{ path('app_logout') }}">Deconnexion</a>
						{% else %}
							<a class=" btn btn-sm text-uppercase border-2
							{% if app.request.get('_route') starts with 'home'%}
								btn-outline-secondary
								{% elseif app.request.get('_route') starts with 'investisseur' or 'intraday' %}
								btn-outline-light
							{% endif %}
							mx-2" href="{{ path('home_login') }}">MES METHODES</a>
						{% endif %}

						<div class="dropdown">
							<button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="dropdownLang" data-bs-toggle="dropdown" aria-expanded="false">
								<span class="fi fi-fr"></span>
							</button>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownLang">
								<li>
									<a class="dropdown-item" href="#">
										<span class="fi fi-fr"></span>
										Français (France)
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										<span class="fi fi-gb"></span>
										English (UK)
									</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</header>
		</div>
	</div>
			{% if app.request.get('_route') matches '/^(home|app)/' %}
				{% include 'partials/menu_home.html.twig' %}
			{% endif %}
			{% if app.request.get('_route') starts with 'investisseur'%}
				{% include 'partials/menu_investisseur.html.twig' %}
			{% endif %}
			{% if app.request.get('_route') starts with 'intraday'%}		
				{% include 'partials/menu_intraday.html.twig' %}
			{% endif %}
</div>

{# Template générique pour les menus avec sous-menus #}
{# Variables attendues : section, menu_class, nav_class #}
{% set current_route = app.request.attributes.get('_route') %}

<div class="zen-menu {{ menu_class|default('') }}">
    <nav class="navbar navbar-expand-lg text-uppercase {{ nav_class|default('main-nav main-nav-g') }} p-0">
        <div class="container-fluid limited-width">
            <div class="navbar-text me-3 fw-bold text-dark" style="color: #370028;">ZENBOURSE <i class="ms-2 fa-solid fa-angle-right"></i></div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    {% for item in get_menu(section) %}
                        {% set is_active = is_active_menu(current_route, item) %}
                        <li class="nav-item">
                            <a class="p-3 nav-link {{ is_active ? 'active' : '' }}" href="{{ menu_url(item) }}">
                                {{ item.label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sous-menu dans une nouvelle div -->
    {% set active_parent = get_active_parent_menu(current_route, section) %}
    <div class="sub-menu-container bg-light {% if active_parent and active_parent.children is not empty %}border-bottom{% endif %}">
        <div class="sub">
            {% if active_parent and active_parent.children is not empty %}
                <nav class="navbar navbar-expand-lg text-uppercase p-0" style="font-weight: 400;">
                    <div class="container-fluid limited-width">
                        <a class="me-3 fw-bold" href="{{ menu_url(active_parent) }}">{{ active_parent.label }} <i class="ms-2 fa-solid fa-angle-right"></i></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav-{{ active_parent.id }}" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav-{{ active_parent.id }}">
                            <ul class="navbar-nav">
                                {% for child in active_parent.children|sort((a, b) => a.menuorder <=> b.menuorder) %}
                                    {% if child.isIsActive %}
                                        {% set child_is_active = is_active_child(current_route, child) %}
                                        <li class="nav-item">
                                            <a class="py-2 px-3 nav-link link-secondary {{ child_is_active ? 'active' : '' }}" href="{{ menu_url(child) }}">
                                                {{ child.label }}
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endif %}
        </div>
    </div>
</div> 
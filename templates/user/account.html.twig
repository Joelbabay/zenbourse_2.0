{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}
    <div class="custom-container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <h1>Votre compte</h1>
                </div>
            </div>
            <section style="background-color: #fff;">
                <div class="container py-5">
                    <div class="row">
                        <div class="col">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} mt-2">{{ message }}</div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" class="bg-body-secondary rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Mon compte</li>
                        </ol>
                        </nav>
                    </div>
                    </div>

                    <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="{{ asset('images/logo/zenbourse.png') }}" alt="avatar"
                            class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3 fw-bold">{{user.getFullName}}</h5>
                            <p class="text-muted mb-1">{{user.getEmail}}</p>
                            <button type="button" class="btn btn-outline-secondary btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                <i class="fas fa-edit"></i> Modifier mes informations
                            </button>
                        </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Nom</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getFullName}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getEmail}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Numéro téléphone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getPhone ?? '<i class="text-secondary">pas de numéro</i>'}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Ville</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getCity ?? '<i class="text-secondary">non renseignée</i>'}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Code postal</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getPostalCode ?? '<i class="text-secondary">non renseigné</i>'}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Pays</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getCountry ?? '<i class="text-secondary">non renseigné</i>'}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Vos formules</p>
                                </div>
                                <div class="col-sm-9">
                                    {% set hasFormule = false %}
                                    {% if user.isInvestisseur %}
                                        <a href="{{ path('investisseur_la-methode') }}" class="btn btn-outline-info btn-sm">Investisseur</a>
                                        {% set hasFormule = true %}
                                    {% endif %}
                                    {% if user.isIntraday %}
                                        <a href="{{ path('intraday_methode') }}" class="btn btn-outline-warning btn-sm">Intraday</a>
                                        {% set hasFormule = true %}
                                    {% endif %}
                                    {% if not hasFormule %}
                                        <div class="alert alert-info mt-2">
                                            Êtes-vous intéressé par les méthodes Zenbourse ? <a href="{{ path('home_investisseur_subscription') }}">Inscrivez-vous</a>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <hr>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                <i class="fas fa-key"></i> Changer mon mot de passe
                            </button>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Modal pour modifier les informations personnelles -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">
                        <i class="fas fa-user-edit"></i> Modifier mes informations
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(profileForm) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(profileForm.firstname, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(profileForm.lastname, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(profileForm.email, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(profileForm.phone, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(profileForm.city, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(profileForm.postalCode, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(profileForm.country, {
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                    {{ form_end(profileForm) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour changer le mot de passe -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">
                        <i class="fas fa-key"></i> Changer mon mot de passe
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(passwordForm) }}
                    {{ form_row(passwordForm.currentPassword, {
                        'attr': {'class': 'form-control'},
                        'label_attr': {'class': 'form-label fw-bold'}
                    }) }}
                    {{ form_row(passwordForm.newPassword, {
                        'attr': {'class': 'form-control'},
                        'label_attr': {'class': 'form-label fw-bold'}
                    }) }}
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Changer le mot de passe
                        </button>
                    </div>
                    {{ form_end(passwordForm) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        // Afficher automatiquement les modales en cas d'erreur
        document.addEventListener('DOMContentLoaded', function() {
            // Utiliser les variables passées par le contrôleur
            {% if showProfileModal %}
                var profileModal = new bootstrap.Modal(document.getElementById('editProfileModal'));
                profileModal.show();
            {% endif %}
            
            {% if showPasswordModal %}
                var passwordModal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
                passwordModal.show();
            {% endif %}
            
            // Fallback : vérifier les erreurs dans les messages flash
            var flashMessages = document.querySelectorAll('.alert-danger, .alert-warning');
            if (flashMessages.length > 0 && !document.querySelector('.modal.show')) {
                // Si il y a des erreurs flash et qu'aucune modal n'est déjà ouverte
                var flashText = flashMessages[0].textContent.toLowerCase();
                if (flashText.includes('prénom') || flashText.includes('nom') || flashText.includes('email') || flashText.includes('téléphone') || flashText.includes('ville') || flashText.includes('pays')) {
                    var profileModal = new bootstrap.Modal(document.getElementById('editProfileModal'));
                    profileModal.show();
                } else if (flashText.includes('mot de passe') || flashText.includes('password')) {
                    var passwordModal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
                    passwordModal.show();
                }
            }
        });
    </script>
{% endblock %}

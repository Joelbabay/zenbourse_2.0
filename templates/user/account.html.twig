{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}
    <div class="custom-container mt-4">
        <div class="row">
            <div class="col-12">
                <h1>Bienvenue sur votre compte, {{user.getFirstName}}</h1>
            </div>
            <section style="background-color: #fff;">
                <div class="container py-5">
                    <div class="row">
                        <div class="col">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} mt-2">{{ message }}</div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="row">
                    <div class="col">
                        <nav aria-label="breadcrumb" class="bg-body-secondary rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Mon compte</li>
                        </ol>
                        </nav>
                    </div>
                    </div>

                    <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="{{ asset('images/logo/zenbourse.png') }}" alt="avatar"
                            class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3 fw-bold">{{user.getFullName}}</h5>
                            <p class="text-muted mb-1">{{user.getEmail}}</p>
                            <a href="" class="btn btn-outline-secondary btn-sm mt-2">Modifier mes informations</a>
                        </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Nom</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getFullName}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getEmail}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Numero téléphone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.getPhone ?? '<i class="text-secondary">pas de numéro</i>'}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 fw-bold">Vos formules</p>
                                </div>
                                <div class="col-sm-9">
                                    {% set hasFormule = false %}
                                    {% if user.isInvestisseur %}
                                        <a href="{{ path('investisseur_methode') }}" class="btn btn-outline-info btn-sm">Investisseur</a>
                                        {% set hasFormule = true %}
                                    {% endif %}
                                    {% if user.isIntraday %}
                                        <a href="{{ path('intraday_methode') }}" class="btn btn-outline-warning btn-sm">Intraday</a>
                                        {% set hasFormule = true %}
                                    {% endif %}
                                    {% if not hasFormule %}
                                        <div class="alert alert-info mt-2">
                                            Êtes-vous intéressé par les méthodes Zenbourse ? <a href="{{ path('home_investisseur_subscription') }}">Inscrivez-vous</a>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <hr>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                Changer mon mot de passe
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="changePasswordModalLabel">Changer mon mot de passe</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                                    </div>
                                    <div class="modal-body">
                                        {{ form_start(form) }}
                                        {{ form_row(form.currentPassword) }}
                                        {{ form_row(form.newPassword) }}
                                        <button class="btn btn-primary mt-3">Valider</button>
                                        {{ form_end(form) }}
                                    </div>
                                    </div>
                                </div>
                            </div>
                            {% if form.vars.errors|length > 0 or form.currentPassword.vars.errors|length > 0 or form.newPassword.vars.errors|length > 0 %}
                            <script>
                                var myModal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
                                myModal.show();
                            </script>
                            {% endif %}
                            <!-- Modal -->
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

{# admin/fields/custom_boolean_toggle.html.twig #}

{% block body_javascript %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const investInput = document.querySelector('input[name="User[isInvestisseur]"]');
            const intraInput = document.querySelector('input[name="User[isIntraday]"]');

            if (!investInput || !intraInput) return;

            const updateIntraday = () => {
                intraInput.disabled = !investInput.checked;
                if (!investInput.checked) intraInput.checked = false;
            };

            updateIntraday();
            investInput.addEventListener('change', updateIntraday);
        });
    </script>
{% endblock %}

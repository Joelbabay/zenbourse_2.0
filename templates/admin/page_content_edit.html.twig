{% extends '@EasyAdmin/crud/edit.html.twig' %}

{% block page_title %}
    <div class="d-flex align-items-center mb-4">
        <div class="me-3">
            <i class="fas fa-edit fa-2x text-warning"></i>
        </div>
        <div>
            <h1 class="h3 mb-0 text-warning">Modifier le contenu</h1>
            <p class="text-muted mb-0">Modifiez le contenu de votre page</p>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-edit me-2"></i>
                            Modification du contenu
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <!-- Informations de la page -->
                        <div class="alert alert-info mb-4">
                            <h5 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>
                                Informations de la page
                            </h5>
                            <p class="mb-0">
                                <i class="fas fa-info-circle text-info me-1"></i>
                                Vous pouvez modifier le titre et le contenu de cette page. La section et le menu ne peuvent pas être modifiés après la création.
                            </p>
                        </div>
                        
                        {{ parent() }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .form-control, .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }
        
        .form-label {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }
        
        .form-text {
            font-size: 0.95rem;
            margin-top: 0.5rem;
        }
        
        .card {
            border-radius: 12px;
        }
        
        .card-header {
            border-radius: 12px 12px 0 0 !important;
        }
        
        .text-warning {
            color: #ffc107 !important;
        }
        
        .bg-warning {
            background-color: #ffc107 !important;
        }
        
        .alert {
            border-radius: 8px;
            border: none;
        }
        
        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
        }
        
        /* Amélioration de l'UX pour seniors */
        .field-form_panel {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .field-form_panel .form-label {
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        
        .field-form_panel .form-control,
        .field-form_panel .form-select {
            font-size: 1.1rem;
            padding: 12px;
        }
        
        .field-form_panel .form-text {
            color: #666;
            font-size: 0.9rem;
        }
        
        .badge {
            font-size: 0.9rem;
            padding: 0.5rem 0.75rem;
        }
    </style>
{% endblock %} 
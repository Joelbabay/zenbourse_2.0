{% extends '@EasyAdmin/crud/new.html.twig' %}

{% block page_title %}
    <div class="d-flex align-items-center mb-4">
        <div class="me-3">
            <i class="fas fa-file-alt fa-2x text-primary"></i>
        </div>
        <div>
            <h1 class="h3 mb-0 text-primary">Créer un nouveau contenu</h1>
            <p class="text-muted mb-0">Ajoutez du contenu à vos pages</p>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-plus-circle me-2"></i>
                            Nouveau contenu de page
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        {{ parent() }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .form-control, .form-select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        .form-label {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }
        
        .form-text {
            font-size: 0.95rem;
            margin-top: 0.5rem;
        }
        
        .card {
            border-radius: 12px;
        }
        
        .card-header {
            border-radius: 12px 12px 0 0 !important;
        }
        
        .text-primary {
            color: #0d6efd !important;
        }
        
        .bg-primary {
            background-color: #0d6efd !important;
        }
        
        /* Amélioration de l'UX pour seniors */
        .field-form_panel {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .field-form_panel .form-label {
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        
        .field-form_panel .form-control,
        .field-form_panel .form-select {
            font-size: 1.1rem;
            padding: 12px;
        }
        
        .field-form_panel .form-text {
            color: #666;
            font-size: 0.9rem;
        }
    </style>

    <script>
        // Filtrage des menus selon la section sélectionnée
        document.addEventListener('DOMContentLoaded', function() {
            const sectionSelect = document.querySelector('select[name*="[section]"]');
            const menuSelect = document.querySelector('select[name*="[menu]"]');
            
            if (sectionSelect && menuSelect) {
                sectionSelect.addEventListener('change', function() {
                    const selectedSection = this.value;
                    const menuOptions = menuSelect.options;
                    
                    // Masquer toutes les options
                    for (let i = 0; i < menuOptions.length; i++) {
                        menuOptions[i].style.display = 'none';
                    }
                    
                    // Afficher seulement les menus de la section sélectionnée
                    for (let i = 0; i < menuOptions.length; i++) {
                        const option = menuOptions[i];
                        if (option.textContent.includes(selectedSection)) {
                            option.style.display = 'block';
                        }
                    }
                    
                    // Réinitialiser la sélection du menu
                    menuSelect.value = '';
                });
            }
        });
    </script>
{% endblock %} 